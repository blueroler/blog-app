{
  "project": "website-blueroler",
  "hosting": {
    "site": "website-blueroler",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/Politics",
        "destination": "/topic.html"
      },
      {
        "source": "/Sports",
        "destination": "/topic.html"
      },
      {
        "source": "/Technology",
        "destination": "/topic.html"
      },
      {
        "source": "/Entertainment",
        "destination": "/topic.html"
      },
      {
        "source": "/Economy",
        "destination": "/topic.html"
      },
      {
        "source": "/Life",
        "destination": "/topic.html"
      },
      {
        "source": "/World",
        "destination": "/topic.html"
      },
      {
        "source": "/:Id",
        "destination": "/posts.html"
      }
    ]
  }
}